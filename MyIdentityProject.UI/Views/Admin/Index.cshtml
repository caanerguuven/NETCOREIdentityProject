@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}


<div class="bg-primary text-white p-1 m-1 ">
    User List
</div>
<div class="text-danger" asp-validation-summary="ModelOnly">

</div>
<table class="table table-bordered table-striped m-1 p-1">
    <thead>
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>User Email</th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">
                Users Could Not been found.
            </td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <form asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <a asp-controller="Admin" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-controller="Admin" asp-action="Create" class="btn btn-primary">Create User</a>

