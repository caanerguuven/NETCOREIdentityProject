@model string


<div class="bg-primary text-white p-1 m-1 ">
    Create Role
</div>


<form class="m-1 p-1" asp-controller="AdminRole" asp-action="Create" method="post">
    <div class="text-danger" asp-validation-summary="All">

    </div>

    <div class="form-group">
        <label for="name">Role Name</label>
        <input for="name" name="name" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Submit" />
    <a class="btn btn-danger" asp-controller="AdminRole" asp-action="Index">Cancel</a>
</form>

