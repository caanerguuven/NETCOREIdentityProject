@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}


<div class="bg-primary text-white p-1 m-1 ">
    Role List
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}
<table class="table table-bordered table-striped m-1 p-1">
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th>Users</th>
            <th></th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">
                Roles Could Not been found.
            </td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td IdentityRole="@role.Id"></td>
                <td>
                    <form asp-controller="AdminRole" asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a asp-controller="AdminRole" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">Update</a>
                        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-controller="AdminRole" asp-action="Create" class="btn btn-primary">Create Role</a>

