@model  RoleModel.RoleDetails
@{
    ViewData["Title"] = "Edit";
}


<div class="bg-primary text-white p-1 m-1 ">
    Edit Role
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<form asp-controller="AdminRole" asp-action="Edit" method="post">
    <input type="hidden" name="RoleId" value="@Model.Role.Id" />
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />

    <h6 class="bg-info p-1  text-white">
        Add to @Model.Role.Name
    </h6>
    <table>
        @if (Model.NonRoleMembers.Count() == 0)
        {
            <tr>
                <td colspan="2">All users are non members</td>
            </tr>
        }
        else
        {
            foreach (var member in Model.NonRoleMembers)
            {
                <tr>
                    <td>@member.UserName</td>
                    <td><input type="checkbox" id="UserIdsToAdd" name="UserIdsToAdd" value="@member.Id" /></td>
                </tr>
            }
        }
    </table>

    <h6 class="bg-info p-1  text-white">
        Delete to @Model.Role.Name
    </h6>
    <table>
        @if (Model.RoleMembers.Count() == 0)
        {
            <tr>
                <td colspan="2">All users are members</td>
            </tr>
        }
        else
        {
            foreach (var member in Model.RoleMembers)
            {
                <tr>
                    <td>@member.UserName</td>
                    <td><input type="checkbox" id="UserIdsToDelete" name="UserIdsToDelete" value="@member.Id" /></td>
                </tr>
            }
        }
    </table>

    <button type="submit"  class="btn btn-primary"> Save</button>
    <a asp-controller="AdminRole" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

